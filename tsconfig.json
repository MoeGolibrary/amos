{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "lib": ["esnext"],
    "incremental": true,
    "tsBuildInfoFile": ".cache/ts.json",
    "allowJs": false,
    "jsx": "react",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "removeComments": false,
    "noEmit": true,
    "noEmitOnError": true,
    "importHelpers": true,
    "downlevelIteration": false,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitBOM": false,
    "newLine": "LF",
    "pretty": true,
    "allowUnreachableCode": false,
    "stripInternal": true,
    "allowUnusedLabels": false,
    "baseUrl": "packages",
    "rootDir": ".",
    "importsNotUsedAsValues": "remove",
    "preserveValueImports": false,
    "paths": {
      "amos-*": ["amos-*/src"]
    },
    "types": ["node", "@docusaurus/module-type-aliases", "@docusaurus/theme-classic", "jest"],
    "skipLibCheck": true
  },
  "include": ["packages"],
  "exclude": ["lib", "esm"]
}
